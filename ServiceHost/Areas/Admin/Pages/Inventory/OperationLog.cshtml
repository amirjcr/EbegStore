@model List<InventoryManagement.Application.Contract.Inventories.InventoryOperatiaonViewmodel>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">سوابق گردش انبار</h4>
</div>

<div class="modal-body">

    <table class="table table-bordered" id="datatable">
        <thead>
            <tr>
                <th>#</th>
                <th>تعداد</th>
                <th>تاریخ عملیات</th>
                 <th>عملیات</th>
                <th>موجودی فعلی</th>
                <th>عملگر</th>
                <th>توضیحات</th>
            </tr>
        </thead>


        <tbody>
            @foreach (var item in Model)
            {
                <tr class="white-bg @(item.Operation ? "bg-success" : "bg-danger")">
                    <td>@item.Id</td>
                    <td>@item.Count</td>
                    <td>@item.OperationDate</td>
                    <td>
                        @if (item.Operation)
                        {
                            <span>افزایش</span>
                        }
                        else
                        {
                             <span>کاهش</span>
                        }
                    </td>
                    <td>@item.CurentCount</td>
                    <td>@item.OpreatorName</td>
                    <td>@item.Description</td>
                </tr>
            }
        </tbody>
    </table>



    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
    </div>
</div>