@model ShopManagement.Application.Contracts.ProdutPictures.CreateProductPicture

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ایجاد عکس محصول جدید</h4>
</div>

<form asp-page="./Index" asp-page-handler="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PictureName" class="control-label">نام عکس </label>
                    <input type="text" class="form-control" asp-for="PictureName">
                    <span asp-validation-for="PictureName" class="error"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PictureAlt" class="control-label">نمایش عکس</label>
                    <input type="text" class="form-control" asp-for="PictureAlt" />
                    <span asp-validation-for="PictureAlt" class="error"></span>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PictureTitle" class="control-label">عنوان عکس</label>
                    <input type="number" class="form-control" asp-for="PictureTitle" />
                    <span asp-validation-for="PictureTitle" class="error"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ProdctId" class="control-label">گروه محصولی</label>
                    <select type="text" class="form-control" asp-for="ProdctId" asp-items='new SelectList(Model.Products,"Id","Name")'>
                        <option value="0">گروه محصولی </option>
                    </select>

                    <span asp-validation-for="ProdctId" class="error"></span>
                </div>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
    </div>
</form>